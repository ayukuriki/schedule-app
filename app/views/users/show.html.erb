<h3>スケジュール詳細</h3>
 
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @user.start_date %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @user.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
          <% if @user.all_day %>
          "○"
          <% else %>
          ""
          <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @user.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :users %></li>
    <li><%= link_to "スケジュールを編集する", :edit_user %></li>
    <li><%= link_to "削除",[:user] %></li>
  </ul>
</div>